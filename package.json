{
  "name": "vscode-tiddlyedit",
  "repository": {
    "type": "git",
    "url": "https://github.com/byzheng/vscode-tiddlyedit.git"
  },
  "displayName": "TiddlyEdit",
  "publisher": "byzheng",
  "license": "MIT",
  "description": "Seamlessly edit and manage TiddlyWiki tiddlers within VS Code using a REST API connection.",
  "version": "0.2.7",
  "engines": {
    "vscode": "^1.102.0"
  },
  "extensionDependencies": [
    "joshua-fontany.tw5-syntax"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "TiddlyEdit Configuration",
      "properties": {
        "tiddlywiki.host": {
          "type": "string",
          "default": "http://127.0.0.1:8080",
          "description": "Base URL of the TiddlyWiki server"
        },
        "tiddlywiki.recipe": {
          "type": "string",
          "default": "default",
          "description": "Recipe name"
        },
        "tiddlywiki.defaultfilter": {
          "type": "string",
          "default": "[all[tiddlers]!is[system]!is[shadow]!sort[modified]limit[10]]",
          "description": "Default filter for tiddlers"
        },
        "tiddlywiki.searchFilter": {
          "type": "string",
          "default": "[all[tiddlers]!is[system]search:title<query>limit[10]]",
          "description": "Search filter for tiddlers"
        },
        "tiddlywiki.autoSaveInterval": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 300,
          "description": "Auto-save interval in seconds for tiddler files (1-300 seconds)"
        },
        "tiddlywiki.enableAutoSave": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic saving of tiddler files"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tiddlywiki-container",
          "title": "TiddlyWiki",
          "icon": "media/Tiddlywiki.svg"
        }
      ]
    },
    "views": {
      "tiddlywiki-container": [
        {
          "id": "tiddlywiki-tiddlers",
          "name": "Tiddlers",
          "type": "webview"
        },
        {
          "id": "tiddlywiki-meta",
          "name": "Meta",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "tiddlyedit.insertAutocomplete",
        "title": "TiddlyWiki: Insert Autocomplete"
      },
      {
        "command": "tiddlyedit.previewRmdInTiddlyWiki",
        "title": "Preview in TiddlyWiki",
        "icon": "media/Tiddlywiki.svg"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tiddlyedit.insertAutocomplete",
          "when": "editorTextFocus"
        }
      ],
      "editor/title": [
        {
          "command": "tiddlyedit.previewRmdInTiddlyWiki",
          "when": "tiddlyedit.isPreviewable && resourceExtname =~ /\\.(rmd|Rmd|tid|Tid)$/",
          "group": "navigation@99"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+space",
        "command": "tiddlyedit.insertAutocomplete",
        "when": "editorTextFocus"
      }
    ]
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}