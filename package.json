{
  "name": "tiddlyedit",
  "displayName": "TiddlyEdit",
  "description": "Edit TiddlyWiki tiddlers in VS Code via REST API",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "TiddlyWiki",
      "properties": {
        "tiddlywiki.host": {
          "type": "string",
          "default": "http://127.0.0.1:8080",
          "description": "Base URL of the TiddlyWiki server"
        },
        "tiddlywiki.recipe": {
          "type": "string",
          "default": "default",
          "description": "Recipe name"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tiddlywiki-container",
          "title": "TiddlyWiki",
          "icon": "media/Tiddlywiki.svg"
        }
      ]
    },
    "views": {
      "tiddlywiki-container": [
        {
          "id": "tiddlywiki-webview",
          "name": "TiddlyWiki Search",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "tiddlywiki.searchTiddler",
        "title": "TiddlyWiki: Search Tiddler"
      },
      {
        "command": "tiddlywiki.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "tiddlywiki.search",
        "title": "Search",
        "icon": "$(search)"
      },
      {
        "command": "tiddlywiki.showView",
        "title": "TiddlyWiki: Show View"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tiddlywiki.refresh",
          "when": "view == tiddlywiki-view",
          "group": "navigation"
        },
        {
          "command": "tiddlywiki.search",
          "when": "view == tiddlywiki-view",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}